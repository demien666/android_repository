<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demien.weather.ua"
    android:versionCode="2"
    android:versionName="2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.demien.weather.ua.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.demien.weather.ua.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.demien.weather.ua.RemoveCityActivity"
            android:label="@string/title_activity_remove_city" >
        </activity>
        <activity
            android:name="com.demien.weather.ua.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="com.demien.weather.ua.DevInfoActivity"
            android:label="@string/title_activity_dev_info" >
        </activity>
        <activity
            android:name="com.demien.weather.ua.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>        
    </application>

</manifest>
